<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ClasesFragment"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clases"
            android:textSize="30dp"
            android:textColor="#000"
            android:textStyle="bold"

            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200"
                android:padding="10dp">

                <TextView
                    android:id="@+id/clases_t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Principiantes"
                    android:textColor="#ffff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clases_t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clases_t1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Maestro: Maestro 1"
                    android:textColor="#ffff" />
                <TextView
                    android:id="@+id/clases_t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clases_t2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="18:00 - 19:00"
                    android:textColor="#ffff" />


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/taekwondo" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200"
                android:padding="10dp">

                <TextView
                    android:id="@+id/clases_t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cintas bajas"
                    android:textSize="30sp"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/clases_t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clases_t4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Maestro: Maestro 2"
                    android:textColor="#ffff" />
                <TextView
                    android:id="@+id/clases_t6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clases_t5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="17:00 - 18:00"
                    android:textColor="#ffff" />


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/taekwondo" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200"
                android:padding="10dp">

                <TextView
                    android:id="@+id/clases_t7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cintas intermedias"
                    android:textSize="30sp"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/clases_t8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clases_t7"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Maestro: Maestro 3"
                    android:textColor="#ffff" />
                <TextView
                    android:id="@+id/t9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clases_t8"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="18:00 - 19:00"
                    android:textColor="#ffff" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/taekwondo" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/purple_200"
                android:padding="10dp">

                <TextView
                    android:id="@+id/clases_t10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cintas altas"
                    android:textSize="30sp"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/clases_t11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clases_t10"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Maestro: Maestro 4"
                    android:textColor="#ffff" />
                <TextView
                    android:id="@+id/clases_t12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/clases_t11"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="19:00 - 20:00"
                    android:textColor="#ffff" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:maxHeight="100dp"
                    android:src="@drawable/taekwondo" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</FrameLayout>